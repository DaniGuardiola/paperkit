{
  "type": "tag",
  "name": "md-list",
  "css": [
    {
      "property": "display",
      "value": "block"
    },
    {
      "property": "margin-top",
      "value": "8px"
    },
    {
      "property": "margin-bottom",
      "value": "8px"
    }
  ],
  "defaults": [
    {
      "name": "md-type",
      "values": [ "one-line" ]
    }
  ],
  "fixes": [
    {
      "after": "> md-tile",
      "css": [
        {
          "property": "display",
          "value": "flex"
        },
        {
          "property": "width",
          "value": "100%"
        },
        {
          "property": "padding-left",
          "value": "16px"
        },
        {
          "property": "padding-right",
          "value": "16px"
        },
        {
          "property": "position",
          "value": "relative"
        },
        {
          "property": "overflow",
          "value": "hidden"
        }
      ]
    }
  ],
  "attributes": [
    {
      "type": "attribute",
      "name": "md-type",
      "values": [
        {
          "name": "one-line",
          "fixes": [
            {
              "after": "> md-tile",
              "css": [
                {
                  "property": "min-height",
                  "value": "48px"
                },
                {
                  "property": "max-height",
                  "value": "56px"
                }
              ]
            },
            {
              "after": "> md-tile> md-text",
              "css": [
                {
                  "property": "padding-top",
                  "value": "16px"
                },
                {
                  "property": "padding-bottom",
                  "value": "16px"
                },
                {
                  "property": "font-size",
                  "value": "16px"
                },
                {
                  "property": "line-height",
                  "value": "16px"
                }
              ]
            },
            {
              "after": ">md-tile> md-avatar + md-text",
              "css": [
                {
                  "property": "padding-top",
                  "value": "20px"
                }
              ]
            },
            {
              "after": ">md-tile> md-avatar ~ md-icon-button",
              "css":  [
                {
                  "property": "margin-top",
                  "value": "4px"              
                }                
              ]
            },
            {
              "after": "> md-tile> md-avatar:first-of-type",
              "css": [
                {
                  "property": "margin",
                  "value": "8px 16px 8px 0px"
                }
              ]
            }
          ]
        },
        {
          "name": "two-lines",
          "fixes": [
            {
              "after": "> md-tile",
              "css": [
                {
                  "property": "height",
                  "value": "72px"
                }
              ]
            }            
          ]
        },
        {
          "name": "three-lines",
          "fixes": [
            {
              "after": "> md-tile",
              "css": [
                {
                  "property": "height",
                  "value": "88px"
                }
              ]              
            }
          ]
        }
      ]
    },
    {
      "type": "attribute",
      "name": "md-separator",
      "values": [
        {
          "name": "full",
          "fixes": [
            {
              "after": "> md-tile:after, md-list> md-tile[md-separator=full]:after",
              "css": [
                {
                  "property": "display",
                  "value": "block"
                },
                {
                  "property": "position",
                  "value": "absolute"
                },
                {
                  "property": "bottom",
                  "value": "0px"
                },
                {
                  "property": "left",
                  "value": "0px"
                },
                {
                  "property": "height",
                  "value": "1px"
                },
                {
                  "property": "width",
                  "value": "100%"
                },
                {
                  "property": "background-color",
                  "value": "rgba(0, 0, 0, 0.12)"
                },
                {
                  "property": "content",
                  "value": "\"\""
                }
              ]
            }            
          ]
        },
        {
          "name": "partial",
          "fixes": [
            {
              "after": "> md-tile:after, md-list> md-tile[md-separator=partial]:after",
              "css": [
                {
                  "property": "display",
                  "value": "block"
                },
                {
                  "property": "position",
                  "value": "absolute"
                },
                {
                  "property": "bottom",
                  "value": "0px"
                },
                {
                  "property": "left",
                  "value": "0px"
                },
                {
                  "property": "height",
                  "value": "1px"
                },
                {
                  "property": "width",
                  "value": "100%"
                },
                {
                  "property": "background-color",
                  "value": "rgba(0, 0, 0, 0.12)"
                },
                {
                  "property": "content",
                  "value": "\"\""
                },
                {
                  "property": "margin-left",
                  "value": "72px"
                }
              ]
            }            
          ]
        },
        {
          "name": "none",
          "fixes": [
            {
              "after": "> md-tile:after, md-list> md-tile[md-separator=none]:after", 
              "css": [
                {
                  "property": "display",
                  "value": "none"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}